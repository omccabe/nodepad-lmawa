extends ../layout

block content
	h1 Your Documents

	P
		a(class='button', href='/documents/new') + New Document

	ul
		- each d in documents
			li
				a(class='button', href='/documents/' + d.id + '/edit') Edit
				a(class='button destroy', href='/documents/' + d.id) Delete
				a(href='/documents/' + d.id)
				=d.title
