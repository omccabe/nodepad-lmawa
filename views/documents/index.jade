extends ../layout

block content
  div(class='outline-view', id='left')
    div(id='DocumentTitles')
      ul(id='document-list')
        - each d in documents
          li
            a(id=d.id, href='/documents/' + d.id)
              =d.title

    ul(class='toolbar')
      li
        a(href='/documents/new')
          +
      li
        a(href='#', id='delete-document')
          -

  div(class='content-divider')

  div(class='content')
    div(id='editor-container')
      textarea(name=currentDoc.title, id='editor')
        =currentDoc.data || ''
    
  ul(id='controls',class='toolbar')
    li
      a(href='#', id='save-button') Save