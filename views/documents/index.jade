extends ../layout

block content
  if (flash != '')
    div(class='alert')
      button(type='button', class='close', data-dismiss='alert')
        ='x'
      =flash
  div(class='container-fluid')
    div(class='row-fluid', id='main-content')
      div(id='left', class='span4')
        div(id='document-titles', class='well well-small')
          ul(id='document-list', class = 'nav nav-pills nav-stacked')
            - each d in documents
              li
                a(id=d.id, href='/documents/' + d.id)
                  =d.title

      div(class='span8')
        div(id='editor-container')
          textarea(name=currentDoc.title, id='editor', class='fill main-pane ')
            =currentDoc.data || ''
          