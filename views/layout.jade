doctype 5
html
  head
    meta(name="viewport", content="width=device-width, height=device-height, initial-scale=1.0")
    title= 'Nodepad'
    block scripts
      link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
      link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
      script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js')

  body
   div(id='container')
      div(class='navbar navbar-fixed-top navbar-inverse')
        div(class='navbar-inner')
          a(href='/', class='brand') Nodepad
          - if (typeof currentUser !== 'undefined')
            a(href='/sessions/new', class='pull-right navbar-text') Log Out
          div(class='')
            ul(class='nav')
              li
                a(href='#', id='save-button') Save
              li
                a(href='/documents/new') New
              li
                a(href='#', id='delete-document') Delete
      block content
      script(type='text/javascript', src='/bootstrap/js/bootstrap.min.js')
      script(type='text/javascript', src='/javascripts/application.js')

